<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rifar.belanegara.UudSelect">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c52c36">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_pasal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="8"
                    android:text="Koperasi adalah badan usaha yang beranggotakan orang atau badan hukum yang berlandaskan pada asas kekeluargaan dan demokrasi ekonomi. Kegiatan usaha koperasi merupakan penjabaran dari UUD 1945"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_pasal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="8"
                    android:text="Koperasi adalah badan usaha yang beranggotakan orang atau badan hukum yang berlandaskan pada asas kekeluargaan dan demokrasi ekonomi. Kegiatan usaha koperasi merupakan penjabaran dari UUD 1945"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
